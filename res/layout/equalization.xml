<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:padding="10dp"
              android:id="@+id/layout_root_equalization">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="EQUALIZATION"
            android:gravity="center"
            android:id="@+id/textView3" android:layout_row="0" android:layout_column="0" android:textStyle="bold"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_equalization" android:layout_gravity="center_horizontal" android:spinnerMode="dialog"/>

</LinearLayout>