<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:padding="10dp">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TONES"
            android:gravity="center"
            android:id="@+id/textView3" android:layout_row="0" android:layout_column="0" android:textStyle="bold"/>
    <Space
            android:layout_width="20px"
            android:layout_height="100px"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next random tone"
            android:id="@+id/btn_next_TonesRecognition" android:layout_row="1" android:layout_column="0"/>
    <Space
            android:layout_width="20px"
            android:layout_height="20px"
    />
    <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar_TonesRecognition"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:longClickable="false" android:progress="0" android:indeterminate="false"/>
    <Space
            android:layout_width="20px"
            android:layout_height="20px"
    />
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:stretchColumns="*" android:id="@+id/table_TonesRecognition"
            android:layout_weight="0.7">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:orientation="horizontal" android:layout_row="0"
                    android:layout_column="0" android:layout_span="3" android:gravity="center">
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sine"
                        android:id="@+id/radioButton" android:layout_row="0" android:layout_column="0" android:checked="true"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Triangle"
                        android:id="@+id/radioButton3" android:layout_row="0" android:layout_column="2"
                        android:checked="false"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Square"
                        android:id="@+id/radioButton2"
                        android:checked="false"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saw"
                        android:id="@+id/radioButton9"
                        android:checked="false"/>
            </RadioGroup>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="63"
                    android:id="@+id/button" android:layout_row="1" android:layout_column="0"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:id="@+id/button2" android:layout_row="1" android:layout_column="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250"
                    android:id="@+id/button3" android:layout_row="1" android:layout_column="2"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:id="@+id/button4" android:layout_row="2" android:layout_column="0"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:id="@+id/button5" android:layout_row="2" android:layout_column="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:id="@+id/button6" android:layout_row="2" android:layout_column="2"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4000"
                    android:id="@+id/button7" android:layout_row="3" android:layout_column="1"/>
        </TableRow>
    </TableLayout>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:id="@+id/btn_answer_TonesRecognition"
            android:enabled="false"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txt_correct_TonesRecognition"
            android:gravity="center"
            android:textStyle="bold"/>
</LinearLayout>